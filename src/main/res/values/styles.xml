<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="activated" parent="AppTheme">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>
    <style name="TextStyleGrand">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
    </style>
    <style name="TextStylePetit">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    </style>
    <style name="TextStylePetitInverse">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium.Inverse</item>
    </style>
    <style name="TextStyleGrandInverse">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large.Inverse</item>
    </style>

</resources>
