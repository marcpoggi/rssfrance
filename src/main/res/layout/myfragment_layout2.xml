<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.feeltest.rssfrance.activity.MainActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/synd_feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyleGrand"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" />

            <TextView
                android:id="@+id/synd_feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStylePetit" />

            <TextView
                android:id="@+id/synd_feed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStyleGrand"
      />
            <TextView
                android:id="@+id/synd_feed_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStylePetit"
                android:autoLink="web" />

            <TextView
                android:id="@+id/synd_feed_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
